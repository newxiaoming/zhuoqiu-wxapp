/**member.wxss**/
.title{
  margin: 30rpx 0 32rpx;  
  font-weight: bold;
}
.table{
  width: 100%;    
}
.table .tr .th{
  margin-bottom: 30rpx;
}
.tr{
  position: relative;  
  display: flex;
  width: 100%;
  align-items: center;
}
.th{
  width: 25%;
  padding: 20rpx 0;   
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;  
  font-size: 28rpx;
  text-align: center; 
}
.tr .td{
  width: 25%;
  padding: 16rpx 0;
  text-align: center;
  font-size: 30rpx;
}
checkbox-group .td:last-child{
  color: #6d91ed;
}
checkbox-group, label{
  width: 100%;
}
label{
  display: flex;
}
checkbox .wx-checkbox-input{
  position: absolute;
  left: 20rpx;
  top: 50%;  
  width: 24rpx;
  height: 24rpx; 
  margin-top: -12rpx; 
  border-radius: 6rpx;
  border: 1px solid #6d91ed;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 24rpx;
  height: 24rpx;  
  border-radius: 6rpx;
  border: 1px solid #6d91ed;
  line-height: 24rpx;
  text-align: center;
  font-size:20rpx;
  font-weight: bold;
  color: #6997f6;
  background: transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.beginBtn{
  position: fixed;
  bottom: 50rpx;  
  width: 278rpx;
  height: 88rpx;
  border-radius: 6rpx;  
  line-height: 88rpx;  
  background-color: #7297ef;
  text-align: center;
}
.beginBtn text{
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;  
}